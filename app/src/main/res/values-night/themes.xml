<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Jav1001ScoreKeeper" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--  style for Main heading -->
    <style name="headers">
        <item name="android:textStyle">italic|bold</item>
        <item name="android:textColor">#EEB40C</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="headerTextvew" parent="headers">
        <item name="android:textSize">50dp</item>
    </style>

    <style name="subheaderStyle" parent="headers">
        <item name="android:textSize">20dp</item>
    </style>


    <!--  style for team header -->
    <style name="teamHeader">
        <item name="android:textColor">#EEB40C</item>
        <item name="android:textSize">30dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--  style for score points -->
    <style name="scoreStyle">
        <item name="android:textSize">100dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- style for radio buttons -->
    <style name="rbstyles">
        <item name="android:textColor">#0BBFE3</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="buttonTint">#EEB40C</item>
    </style>

    <!-- style for floating action buttons -->
    <style name="buttonStyle">
        <item name="android:backgroundTint">#712139</item>
        <item name="borderWidth">0dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>